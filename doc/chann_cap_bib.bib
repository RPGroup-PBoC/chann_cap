file = {:Users/razo/Dropbox/Articles/Physical review. E, Statistical, nonlinear, and soft matter physics{\_}2008{\_}Tkacik, Callan, Bialek{\_}Information capacity of genetic regulato.pdf:pdf},
issn = {1539-3755},
journal = {Physical review. E, Statistical, nonlinear, and soft matter physics},
